<!DOCTYPE html>
<html lang="vi">

<head>
    <% include ../partials/head %>
</head>

<body id="page-top">
    <div id="wrapper">
        <% include ../partials/sidebar %>
        <div class="d-flex flex-column" id="content-wrapper">
            <div id="content">
                <nav class="navbar navbar-light navbar-expand bg-white shadow mb-4 topbar static-top">
                    <div class="container-fluid"><button class="btn btn-link d-md-none rounded-circle mr-3"
                            id="sidebarToggleTop" type="button"><i class="fas fa-bars"></i></button></div>
                </nav>
                <div class="container">
                    <div class="table-responsive table-borderless table mt-2" id="dataTable" role="grid"
                        aria-describedby="dataTable_info">
                        <table class="table table-bordered table-hover dataTable my-0" id="dataTable">
                            <thead>
                                <tr>
                                    <th>Tiêu Đề Bài Viết</th>
                                    <th>Mô tả ngắn</th>
                                    <th>Ngày</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                <%posts.forEach(post =>{
                                    %>
                                <tr>
                                    <td><%=post.name%></td>
                                    <td><%-post.description%></td>
                                    <td><%if (post.modifyDate){%><%=new Date(post.modifyDate).toLocaleDateString()%><%}%></td>
                                    <td class="text-center" style="width: 100px;"><br><a
                                            href="/ad/editPost/<%=post._id%>"><i
                                            class="fa fa-pencil-square-o"></i></a><a class="text-danger"
                                            href="/ad/listPost/remove/<%=post._id%>" style="margin-left: 16px;"><i
                                                class="fa fa-trash-o"></i></a></td>
                                </tr>
                                <%
                                })%>


                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <% include ../partials/script%>
</body>

</html>